html
    head
        title= title
        meta(name="viewport" content="initial-scale=1.0, width=device-width")

        style.
            body {
                margin: 0;
                padding: 5vh 5vw;
            }

            #mapContainer {
                height: 90vh;
                width: 90vw;
                margin-top: 5vh;
            }

            .entry h2 {
                margin-bottom: .5em;
            }

            .entry p,
            .entry li {
                text-transform: capitalize;
            }

            .entry + .entry {
                margin-top: 3em;
            }

            .info-bubble {
                opacity: 0.75;
                padding: 0 5px;
                pointer-events: none;
            }

            .info-bubble .info-bubble-title {
                font-size: 15px;
                margin-left: 2px;
            }

            .info-bubble .info-bubble-label {
                font-size: 10px;
                opacity: 0.7;
                margin-left: 2px;
            }

            .info-bubble .H_ib_close {
                display: none;
            }

            .info-bubble .H_ib_body {
                padding: 0;
            }
    body
        each entry in entries
            div.entry
                h2 !{entry.title}
                p District: !{entry.township}
                p Location: !{entry.location}
                if (entry.vehicles.length)
                    p Assigned:
                        ul
                            li !{entry.vehicles}

        div#mapContainer

        script(src="http://js.api.here.com/v3/3.0/mapsjs-core.js" type="text/javascript")
        script(src="http://js.api.here.com/v3/3.0/mapsjs-service.js" type="text/javascript")
        script(src="http://js.api.here.com/v3/3.0/mapsjs-ui.js" type="text/javascript")
        script(src="http://js.api.here.com/v3/3.0/mapsjs-mapevents.js" type="text/javascript")
        script(src="https://js.api.here.com/v3/3.0/mapsjs-clustering.js" type="text/javascript")
        script(src="https://js.datalens.api.here.com/latest/mapsjs-datalens.js" type="text/javascript")
        script(src="https://d3js.org/d3.v4.min.js" type="text/javascript")
        script(src="/public/ui.js" type="text/javascript")
        script.
            let eventEntries = !{JSON.stringify(entries)}
            Object.assign(window, {eventEntries});
        script(src="/public/map.js" type="text/javascript")